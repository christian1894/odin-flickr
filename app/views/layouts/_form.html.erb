<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mt-5">
      <%= form_with(url: "/static_pages/find_photos", method: "get", local: true) do %>
        <div class="form-group d-grid justify-content-center">
          <%= label_tag(:photo, "Enter a Flickr Id to find some images!") %>
          <%= text_field(:photo, :q, class: "form-control", value: "189302401@N07") %>
          <small id="help" class="form-text text-muted text-center">Test ID: 189302401@N07</small>
          <div class="d-flex justify-content-center">
            <%= submit_tag("Search", class: "btn btn-primary mt-2", data: {disable_with: "Please wait..."}) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
